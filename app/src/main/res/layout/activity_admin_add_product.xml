<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    tools:context=".AdminActivity.Product.AddProductAdminActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:srcCompat="@drawable/pizza1"
                    android:layout_marginEnd="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thêm\nmón ăn"
                    android:textColor="@color/red"
                    android:textSize="33sp"
                    android:textStyle="bold"
                    android:layout_marginStart="32dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên món ăn"
                android:textColor="#2f3363"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"/>
            <EditText
                android:id="@+id/txtNameFood_Add"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_marginTop="8dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:hint="Nhập tên món"
                android:padding="8dp"
                android:textSize="16sp"
                android:textColor="#a2a4b5"
                android:background="@drawable/background_edittext"
                />

            <ImageView
                android:id="@+id/imgFood_Add"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/pizza1"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSelectImage_Add"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Tải ảnh thức ăn"
                android:textSize="16sp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/background_button"
                style="@android:style/Widget.Button"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mô tả"
                android:textColor="#2f3363"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"/>
            <EditText
                android:id="@+id/txtDescription_Add"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_marginTop="8dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:hint="Nhập giá bán"
                android:padding="8dp"
                android:textSize="16sp"
                android:textColor="#a2a4b5"
                android:background="@drawable/background_edittext"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá bán"
                android:textColor="#2f3363"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"/>
            <EditText
                android:id="@+id/txtAddress_Register"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_marginTop="8dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:hint="Nhập giá bán"
                android:padding="8dp"
                android:textSize="16sp"
                android:textColor="#a2a4b5"
                android:background="@drawable/background_edittext"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phần trăm giảm giá"
                android:textColor="#2f3363"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"/>

            <EditText
                android:id="@+id/txtPhone_Register"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_marginTop="8dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:hint="Nhập phần trăm"
                android:padding="8dp"
                android:textSize="16sp"
                android:textColor="#a2a4b5"
                android:background="@drawable/background_edittext"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danh mục"
                android:textColor="#2f3363"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="48dp"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hết hàng"
                    android:textColor="#2f3363"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Công khai"
                    android:textColor="#2f3363"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chính"
                    android:textColor="#2f3363"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnRegister_Register"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Thêm thức ăn"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="22sp"
                android:drawableEnd="@drawable/circle"
                android:paddingStart="64dp"
                android:padding="4dp"
                android:background="@drawable/background_button_loginregister"
                style="@android:style/Widget.Button"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>